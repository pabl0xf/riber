{
  "manifest_version": 2,
  "name": "Riber",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/main.js"],
      "run_at": "document_end"
    }
  ],
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
            "128": "images/icon128.png"
          },
  "web_accessible_resources": [
    "images/ghost1.jpg",
    "images/ghost2.jpg",
    "images/ghost3.jpg",
    "images/ghost4.jpg",
    "images/ghost5.jpg",
    "images/ghost6.jpg"
  ]
}
